<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.td.truck.dao.CommentDao">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.td.truck.model.Comment">
        <id column="fid" property="id" />
        <result column="fcid" property="cid" />
        <result column="fcreated" property="created" />
        <result column="fauthor" property="author" />
        <result column="fauthor_id" property="authorId" />
        <result column="fowner_id" property="ownerId" />
        <result column="fmail" property="mail" />
        <result column="furl" property="url" />
        <result column="fip" property="ip" />
        <result column="fagent" property="agent" />
        <result column="fcontent" property="content" />
        <result column="ftype" property="type" />
        <result column="fstatus" property="status" />
        <result column="fparent" property="parent" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        fid AS id, fcid AS cid, fcreated AS created, fauthor AS author, fauthor_id AS authorId, fowner_id AS ownerId, fmail AS mail, furl AS url, fip AS ip, fagent AS agent, fcontent AS content, ftype AS type, fstatus AS status, fparent AS parent
    </sql>

</mapper>
