<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.td.truck.dao.MetaDao">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.td.truck.model.Meta">
        <id column="fid" property="id" />
        <result column="fname" property="name" />
        <result column="fslug" property="slug" />
        <result column="ftype" property="type" />
        <result column="fdescription" property="description" />
        <result column="fsort" property="sort" />
        <result column="fparent" property="parent" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        fid AS id, fname AS name, fslug AS slug, ftype AS type, fdescription AS description, fsort AS sort, fparent AS parent
    </sql>

</mapper>
